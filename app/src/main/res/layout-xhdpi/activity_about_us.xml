<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hoja"
    android:textAlignment="center"
    tools:context=".AboutUsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="322dp"
        android:layout_height="386dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="200dp"
        app:cardBackgroundColor="#FFFCFC"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:cardMaxElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1">


        <LinearLayout
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/hollaboi_2"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/txt1"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/hollaboi_2"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/txt2"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/hollaboi_2"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/txt3"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtLink"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/hollaboi_2"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="https://github.com/SergioTS2101/FinalGuessed"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="22sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/volver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|center"
        android:backgroundTint="@android:color/holo_red_light"
        android:fontFamily="@font/hollaboi_2"
        android:text="@string/volver2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>