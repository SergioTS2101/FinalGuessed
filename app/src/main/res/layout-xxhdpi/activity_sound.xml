<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoundActivity"
    android:background="@drawable/hoja">

    <ImageView
        android:id="@+id/encender"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_music_on_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188"
        android:contentDescription="@string/TurnOnMusicImage" />

    <ImageView
        android:id="@+id/apagar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_music_off_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encender"
        app:layout_constraintVertical_bias="0.32"
        android:contentDescription="@string/TurnOffMusicImage" />

</androidx.constraintlayout.widget.ConstraintLayout>